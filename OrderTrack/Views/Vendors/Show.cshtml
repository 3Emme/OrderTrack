@using VendApp.Models;
@{
  Layout = "_Layout";
}

<h3>Here are all the orders for this Vendor:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/orders/@Model["vendor"].Id/orders/@order.Id'>@order.OrderTitle</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order from this vendor</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Back home</a></p>